{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:base"],
  "regexManagers": [
    {
      "fileMatch": ["^\\.github/workflows/.*\\.ya?ml$"],
      "matchStrings": [
        "uses:\\s*['\"]?(?<depName>[\\w.-]+\\/[\\w.-]+(?:\\/[\\w.-]+)*?)@(?<currentValue>[\\w./-]+)['\"]?"
      ],
      "depNameTemplate": "{{{depName}}}",
      "datasourceTemplate": "github-branches",
      "versioningTemplate": "loose"
    }
  ],
  "packageRules": [
    {
      "description": "Only allow stable or beta branch updates, no downgrades",
      "matchPackagePatterns": ["^admsallai/StarsIndustries"],
      "allowedVersions": "/^v\\d+(beta)?$/"
    }
  ]
}
