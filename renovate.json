{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:base"],
  "regexManagers": [
    {
      "fileMatch": [".github/workflows/.*\\.yml$"],
      "matchStrings": ["^\\s*uses: (?<depName>admsallai/StarsIndustries)@(?<currentValue>[\\w\\-]+)$"],
      "datasourceTemplate": "github-branches",
      "depNameTemplate": "{{{depName}}}"
    }
  ],
  "packageRules": [
    {
      "matchManagers": ["regex"],
      "matchPackagePatterns": ["^admsallai/StarsIndustries$"],
      "versioning": "loose",
      "extractVersion": "^(?<version>.*)$",
      "allowedVersions": "/.*/"
    }
  ]
}
