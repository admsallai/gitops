{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:base"],
  "regexManagers": [
    {
      "fileMatch": ["^\\.github/workflows/.*\\.ya?ml$"],
      "matchStrings": [
        "uses:\\s*(?<depName>admsallai/StarsIndustries)@(?<currentValue>v[0-9]+(?:beta)?)"
      ],
      "datasourceTemplate": "github-branches",
      "depNameTemplate": "{{{depName}}}",
      "versioningTemplate": "regex:^v(?<major>\\d+)(?<pre>beta)?$"
    }
  ],
  "packageRules": [
    {
      "matchPackagePatterns": ["^admsallai/StarsIndustries$"],
      "description": "Upgrade from beta â†’ stable if stable branch exists",
      "allowedVersions": "/^v\\d+(beta)?$/",
      "versioning": "regex:^v(?<major>\\d+)(?<pre>beta)?$"
    }
  ]
}
