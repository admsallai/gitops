{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:base"],
  "regexManagers": [
    {
      "fileMatch": ["^action\\.ya?ml$", "^.github/workflows/[^/]+\\.ya?ml$"],
      "matchStrings": [
        "uses:\\s*(?<depName>admsallai/StarsIndustries)@(?<currentValue>v[0-9]+(?:beta)?)"
      ],
      "depNameTemplate": "{{{depName}}}",
      "datasourceTemplate": "github-branches"
    }
  ],
  "packageRules": [
    {
      "description": "General rule: never downgrade, never go stable → beta",
      "matchPackagePatterns": ["^admsallai/StarsIndustries$"],
      "versioning": "loose",
      "allowedVersions": "/^v\\d+(beta)?$/"
    },
    {
      "description": "Block upgrades from stable → beta",
      "matchPackagePatterns": ["^admsallai/StarsIndustries$"],
      "matchCurrentVersion": "/^v\\d+$/",
      "allowedVersions": "/^v\\d+$/"
    }
  ]
}
